<div class="container" style="text-align:center; margin-bottom: 75px; margin-top: 75px ">
    <div class="row">
        <div class="col">
            <h1>ยก Bienvenido/a !</h1>
        </div>
    </div>

    <div class="row">
        <div class="col">
            <p style="text-align: center;"><a href="/admin/login" class="btn btn-sm btn-dark"> Cerrar sesion
                    <i class="fa fa-sign-out"></i></a></p>
        </div>

    </div>

    {{!-- fila 1 fin --}}


    {{!-- fila 2 --}}
    <div class="row">
        <div class="col-7" style="margin-top: 50px;">
            <h2> Lista de Productos</h2>
        </div>

        <div class="col-5 text right">
            <a href="/admin/productos/agregar" class="btn btn-success"> <i class="fas fa-plus"></i> Nuevo </a>
        </div>
    </div>
    {{!-- fila 2 fin --}}

    {{!-- fila 3 --}}

    <div class="row">
        <div class="col">
            <table class="table">
                <thead>
                <tr class="table-dark">
                    <th scope="col" class="text-left"> id </th>
                    <th scope="col"> Titulo </th>
                    <th scope="col"> Descripcion </th>
                    <th scope="col"> Precio </th>
                    <th scope="col"> Estado </th>
                    <th scope="col" class="text-right"> Acciones </th>

                </tr>
                </thead>
                <tbody>

                    {{#each productos}}
                    <tr>
                        <th scope="row">{{id}}</th>
                        <td> {{Titulo}}</td>
                        <td> {{Descripcion}}</td>
                        <td> {{Precio}}</td>
                        <td> {{Estado}}</td>
                        <td class="text-right"> <a href="productos/modificar/{{id}}" class="btn btn-secondary"> <i class="fas fa-pencil-alt"> </i> </a> 
                        <a href="productos/eliminar/{{id}}" class="btn btn-secondary"> <i class="fas fa-trash"></i>  </a>

                        </td>
                        
                    </tr>
                    {{/each}}
                </tbody>
            </table>
        </div>
    </div>

    {{!-- fila 3 fin --}}

</div>